
@model Lppa.UI.Web.ViewModels.BancoViewModel

@{
    ViewBag.Title = "Nuevo Banco";
}

<h2 class="NuevoBanco">Nuevo Banco</h2>

<div class="NuevoBanco">

    @Html.AntiForgeryToken()
    <div class="col-md-12">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading panel-title">Información Básica</div>
            <div class="panel-body">

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.RazonSocial)
                    @Html.TextBoxFor(m => m.RazonSocial, new { @class = "form-control required", placeholder = "Ej. Financiera S.A." })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Alias)
                    @Html.TextBoxFor(m => m.Alias, new { @class = "form-control required", placeholder = "Ej. Macro" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.CUIT)
                    @Html.TextBoxFor(m => m.CUIT, new { @class = "form-control required", placeholder = "Ej. 30455673259" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Direccion)
                    @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control required", placeholder = "Ej. Av. Rivadavia 5768" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Telefono)
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control required", placeholder = "Ej. (011)45673456" })
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-12">
        <input type="submit" class="btn btn-primary pull-right" value="Aceptar" />
    </div>

    <div style="clear:both;">
        @Html.ActionLink("Ver Lista", "Index")
    </div>
