@model IEnumerable<Lppa.Data.Cliente>

@{
    ViewBag.Title = "Clientes";
   

}

<p>@ViewBag.Veraz</p>

<h2 class="ListaClientes">Lista de Clientes</h2>
@using (Html.BeginForm("Create", "Cliente", FormMethod.Get))
{
    <button style="float:right;">
        @Html.ActionLink("Nuevo Cliente", "PasosCliente")
    </button>
}

<button onclick="myFunction()" style="float:right; margin-right:35%;">@ViewBag.Veraz</button>

@using (Html.BeginForm("ValidarVeraz", "Cliente", FormMethod.Post@*, new { dni = ViewBag.ClienteDNI}*@))
{
    @*<button style="margin-right:10%; margin-bottom:10px;">
            @Html.ActionLink("Validar Veraz", "ValidarVeraz")
        </button>*@
    <input type="submit" value="Validar Veraz" placeholder="@ViewBag.DNI"/>
    <input id="dniCliente" type="text" class="form-control" name="DNI" placeholder="DNI" style="width:200px;">
    
}

@using (Html.BeginForm("Index", "Cliente", FormMethod.Post, new { @class = "form" }))
{   <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="dniCliente" type="text" class="form-control" name="DNI" placeholder="DNI" style="width:200px;">

    </div>

}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domicilio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ocupacion)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domicilio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCivil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocupacion)
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.ID })*@

            </td>
        </tr>
    }



</table>

@section Scripts{
    <script>
        function myFunction() {
            alert("@ViewBag.Veraz");
        }
    </script>
}